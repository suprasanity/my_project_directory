{% extends 'base.html.twig' %}

{% block title %}RefPokemonType index{% endblock %}

{% block body %}
    <h1>RefPokemonType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>LastTrained</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ref_pokemon_type in ref_pokemon_types %}
            <tr>
                <td>{{ ref_pokemon_type.id }}</td>
                <td>{{ ref_pokemon_type.name }}</td>
                <td>{{ ref_pokemon_type.lastTrained ? ref_pokemon_type.lastTrained|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_ref_pokemon_type_show', {'id': ref_pokemon_type.id}) }}">show</a>
                    <a href="{{ path('app_ref_pokemon_type_edit', {'id': ref_pokemon_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ref_pokemon_type_new') }}">Create new</a>
{% endblock %}
