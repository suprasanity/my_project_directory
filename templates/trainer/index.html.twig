{% extends 'base.html.twig' %}

{% block title %}Trainer index{% endblock %}

{% block body %}
    <h1>Trainer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Password</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trainer in trainers %}
            <tr>
                <td>{{ trainer.id }}</td>
                <td>{{ trainer.name }}</td>
                <td>{{ trainer.password }}</td>
                <td>{{ trainer.email }}</td>
                <td>
                    <a href="{{ path('app_trainer_show', {'id': trainer.id}) }}">show</a>
                    <a href="{{ path('app_trainer_edit', {'id': trainer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trainer_new') }}">Create new</a>
{% endblock %}
